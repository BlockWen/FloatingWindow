<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.floatingwindow.MainActivity">


    <Switch
        android:id="@+id/main_floatWindowSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="开启悬浮窗" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9999"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left|center"
        android:weightSum="20">

        <TextView
            android:layout_margin="5dp"
            android:text="悬浮窗宽度"
            android:textColor="#FF000000"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/main_windowWidthBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9999"
        android:weightSum="20"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left|center"
        android:weightSum="20">

        <TextView
            android:layout_margin="5dp"
            android:text="悬浮窗高度"
            android:textColor="#FF000000"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/main_windowHeightBar"
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9999"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left|center"
        android:weightSum="20">

        <TextView
            android:layout_margin="5dp"
            android:text="悬浮窗透明度"
            android:textColor="#FF000000"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/main_windowTransparentBar"
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9999"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left|center"
        android:weightSum="20">

        <TextView
            android:layout_margin="5dp"
            android:text="字体大小"
            android:textColor="#FF000000"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/main_textSizeBar"
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9999"/>

</LinearLayout>
